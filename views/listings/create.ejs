<div class="listing-crating-container">
    <h3 class="form-title"><%= title.split(' | ')[1]%></h3>

    <form action="/listings/create" method="POST" class="listing-create-form">
    <div class="field border label grid-span-3-6">
            <input type="text" id="title" name="title" minlength="4" required>
            <label for="title">Title</label>
        </div>

        <div class="field border label grid-span-3-6">
            <input type="number" id="price_per_night" name="price_per_night" min="0" step="0.01" required>
            <label for="price_per_night">Price per night (dollars)</label>
        </div>

        <div class="field border label textarea grid-span-6-6 description-container">
            <textarea id="description" name="description" rows="5" minlength="50"></textarea>
            <label for="description">Description (optional)</label>
        </div>

        <div class="field border label grid-span-2-6">
            <input type="text" id="country" name="country" minlength="3" required>
            <label for="country">Country</label>
        </div>

        <div class="field border label grid-span-2-6">
            <input type="text" id="city" name="city" required>
            <label for="city">City</label>
        </div>

        <div class="field border label grid-span-2-6">
            <input type="text" id="postal_code" name="postal_code" required>
            <label for="postal_code">Postal code</label>
        </div>

        <div class="field border label grid-span-3-6">
            <input type="text" id="street" name="street" minlength="4" required>
            <label for="street">Street</label>
        </div>

        <div class="field border label grid-span-3-6">
            <input type="text" id="house_number" name="house_number">
            <label for="house_number">House number (optional)</label>
        </div>

        <div class="field border label grid-span-2-6">
            <select id="property_type" name="property_type" required>
                <option value="apartment">Apartment</option>
                <option value="house">House</option>
                <option value="room">Room</option>
            </select>
            <label for="property_type">Property type</label>
        </div>

        <div class="field border label grid-span-2-6">
            <input type="number" id="floor" name="floor" min="0">
            <label for="floor">Floor (optional)</label>
        </div>

        <div class="field border label grid-span-2-6">
            <input type="number" id="area" name="area" min="0" step="0.01">
            <label for="area">Area (optional, mÂ²)</label>
        </div>

        <div class="field border label grid-span-2-6">
            <input type="number" id="rooms_count" name="rooms_count" min="1" required>
            <label for="rooms_count">Rooms count</label>
        </div>

        <div class="field border label grid-span-2-6">
            <input type="number" id="beds_count" name="beds_count" min="1" required>
            <label for="beds_count">Beds count</label>
        </div>

        <div class="field border label grid-span-2-6">
            <input type="number" id="maximum_guests" name="maximum_guests" min="1" required>
            <label for="maximum_guests">Maximum guests</label>
        </div>

        <fieldset class="amenities-container grid grid-span-6-6">
            <legend>Select amenities</legend>
            <% amenities.forEach(amenity => { %>
                <button class="chip amenity" type="button" data-amenity-id="<%= amenity.id %>">
                    <i class="primary-text"><%= amenity.icon_name %></i>
                    <span><%= amenity.name %></span>
                </button>
            <% }) %>
        </fieldset>

        <div id="drop-area">
            <input type="file" id="file-input" name="images" accept="image/*" multiple>
            <label for="file-input">
                Drag and drop images or click anywhere to upload
                <br>
                <span class="secondary-text">(maximum 5)</span>
            </label>
            <div id="image-gallery">
                <div class="upload">
                    <i class="large-icon">upload</i>
                </div>
            </div>
        </div>

        <button type="submit" class="listing-create__submit-button">Create listing</button>
    </form>
</div>